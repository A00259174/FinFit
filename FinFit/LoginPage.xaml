<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="FinFit.LoginPage"
             BackgroundColor="#f9f9f9">
    <StackLayout Padding="20">
        <!-- Application name at the top -->
        <Label Text="FinFit"
               FontSize="34"
               HorizontalOptions="Center"
               TextColor="#2c3e50"
               FontAttributes="Bold"
               Margin="0,20,0,10" />

        <!-- Login title -->
        <Label Text="Login" 
               FontSize="32" 
               HorizontalOptions="Center" 
               TextColor="#2c3e50" 
               FontAttributes="Bold" />

        <!-- Image below the title -->
        <Image Source="loginpage.png" 
               HorizontalOptions="Center" 
               HeightRequest="200" 
               Margin="0,20,0,20" />

        <!-- Username entry -->
        <Entry x:Name="usernameEntry" 
               Placeholder="Username" 
               Margin="0,20,0,0" 
               Text="{Binding Email}"/>

        <!-- Password entry -->
        <Entry x:Name="passwordEntry" 
               Placeholder="Password" 
               IsPassword="True" 
               Margin="0,10,0,0" 
               Text="{Binding Password}"/>

        <!-- Login button -->
        <Button Text="Login" 
                Clicked="OnLoginClicked" 
                Margin="0,20,0,0" 
                BackgroundColor="#3498db" 
                TextColor="White" 
                HeightRequest="50" 
                CornerRadius="5"/>

        <!-- Sign up button -->
        <Button Text="Sign Up" 
                Clicked="OnSignUpClicked" 
                Margin="0,10,0,0" 
                BackgroundColor="#2ecc71" 
                TextColor="White" 
                HeightRequest="50" 
                CornerRadius="5"/>

        <!-- Error message label -->
        <Label x:Name="messageLabel" 
               TextColor="Red" 
               HorizontalOptions="Center" 
               Margin="0,10,0,0"/>
    </StackLayout>
</ContentPage>
